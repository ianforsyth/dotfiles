[user]
  name = Ian Forsyth
  email = ian@ianforsyth.com
[alias]
  co = checkout
  cob = checkout -b
  ac = !git add -A && git commit -m
	bc = "!f() { base=$(git show-ref --verify --quiet refs/heads/main && echo main || echo master); git cherry -v \"$base\" --abbrev; }; f"
  amend = !git add . && git commit --amend --no-edit
  fixup = !sh -c 'REV=$(git rev-parse $1) && git add . && git commit --fixup $@ && GIT_SEQUENCE_EDITOR=true git rebase -i --autosquash $REV^' -
  s = status
  bd = branch -D
  back = reset --soft HEAD~1
  rim = rebase -i master
  wip = !git add -A && git commit --no-verify -m "WIP"
  nah = !git add . && git reset --hard HEAD
  last = rev-parse --verify HEAD
	cleanup = "!f() { \
		echo 'Fetching and pruning...'; \
		git fetch --prune origin; \
		echo 'Switching to master...'; \
		git checkout master; \
		git pull origin master; \
		echo ''; \
		echo 'Checking branches for merged changes...'; \
		cleanable=''; \
		kept=''; \
		for branch in $(git branch | grep -v '^\\*' | sed 's/^[+ ]*//'); do \
			if [ \"$branch\" != 'master' ] && [ \"$branch\" != 'main' ]; then \
				cherry=$(git cherry master \"$branch\" 2>/dev/null); \
				if [ -z \"$cherry\" ]; then \
					cleanable=\"$cleanable $branch\"; \
				elif echo \"$cherry\" | grep -q '^+'; then \
					kept=\"$kept $branch\"; \
				else \
					cleanable=\"$cleanable $branch\"; \
				fi; \
			fi; \
		done; \
		cleanable=$(echo \"$cleanable\" | tr ' ' '\\n' | grep -v '^$' | sort -u); \
		kept=$(echo \"$kept\" | tr ' ' '\\n' | grep -v '^$' | sort -u); \
		echo ''; \
		if [ -n \"$cleanable\" ]; then \
			echo 'Branches that WILL BE DELETED (all changes in master):'; \
			echo \"$cleanable\" | sed 's/^/  - /'; \
		else \
			echo 'No branches to delete.'; \
		fi; \
		echo ''; \
		if [ -n \"$kept\" ]; then \
			echo 'Branches that WILL BE KEPT (have unmerged changes):'; \
			echo \"$kept\" | sed 's/^/  - /'; \
			echo ''; \
		fi; \
		if [ -n \"$cleanable\" ]; then \
			printf 'Delete these branches? (y/N): '; \
			read response; \
			if [ \"$response\" = 'y' ] || [ \"$response\" = 'Y' ]; then \
				echo \"$cleanable\" | xargs git branch -D; \
				echo 'Cleanup complete!'; \
			else \
				echo 'Cleanup cancelled.'; \
			fi; \
		fi; \
	}; f"
	l = log -n 5 --pretty=format:'%h %s' --no-color
[url "ssh://git@github.com/"]
  insteadOf = https://github.com/
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[core]
  excludesfile = ~/.gitignore
[push]
  default = current
[http]
	sslVerify = false
[pull]
	rebase = true
[rebase]
	autoStash = true
[init]
	defaultBranch = main
