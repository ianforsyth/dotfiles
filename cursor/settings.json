{
  "files.associations": {
    "*.mdc": "markdown"
  },
  "vim.useSystemClipboard": true,
  "cursor.inline.suggestions.enabled": false,
  "zenMode.fullScreen": false,
  "zenMode.centerLayout": false,
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.insertSpaces": true,
  "editor.renderLineHighlight": "all",
  "editor.lineNumbers": "on",
  "editor.scrollBeyondLastLine": false,
  "editor.autoIndent": "full",
  "editor.formatOnSave": true,
  "editor.fontSize": 13,
  "editor.cursorSurroundingLines": 10,
  "editor.occurrencesHighlight": "off",
  "editor.fontFamily": "'MonaspiceNe Nerd Font Light', monospace",
  "editor.fontLigatures": true,
  "terminal.integrated.fontFamily": "'MonaspiceNe Nerd Font Light', monospace",
  "files.trimTrailingWhitespace": true,
  "explorer.autoReveal": true,
  "workbench.editor.enablePreview": false,
  "search.smartCase": true,
  "explorer.compactFolders": false,
  "editor.cursorBlinking": "solid",
  "workbench.activityBar.orientation": "vertical",
  "workbench.activityBar.location": "hidden",
  "editor.cursorStyle": "block",
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#f3931e",
    "editorCursor.background": "#000000",
    "editor.findMatchHighlightBackground": "#c3781d8c",
    "editor.findMatchHighlightBorder": "#f3931e"
  },
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "x"],
      "commands": ["workbench.action.closeOtherEditors"]
    },
    {
      "before": ["<leader>", "a", "c"],
      "commands": ["workbench.action.toggleAuxiliaryBar"]
    },
    {
      "before": ["<leader>", "a", "i"],
      "commands": ["aipopup.action.modal.generate"]
    },
    {
      "before": ["<leader>", "a", "a"],
      "commands": ["aichat.newchataction"]
    },
    {
      "before": ["<leader>", "f", "e"],
      "commands": ["workbench.files.action.showActiveFileInExplorer"],
      "when": "!explorerViewletVisible"
    },
    {
      "before": ["<leader>", "f", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"],
      "when": "explorerViewletVisible"
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "g"],
      "commands": ["periscope.search"]
    },
    {
      "before": ["<leader>", "f", "G"],
      "commands": [
        "editor.action.addSelectionToNextFindMatch",
        "periscope.search"
      ]
    },
    {
      "before": ["q"],
      "commands": ["closeReferenceSearch"],
      "when": "referenceSearchVisible && !inputFocus"
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.openRecent"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.peekDefinition"]
    },
    {
      "before": ["g", "t"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.nextEditor"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "a", "i"],
      "commands": ["aipopup.action.modal.generate"]
    },
    {
      "before": ["<leader>", "a", "a"],
      "commands": ["aichat.newchataction"]
    }
  ],
  "vim.leader": "<space>",
  "workbench.navigationControl.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.colorTheme": "Gruvbox Dark Medium",
  "editor.peekWidgetDefaultFocus": "editor",
  "update.releaseTrack": "prerelease",
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.statusBar.visible": false
}
